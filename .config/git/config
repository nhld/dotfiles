[include]
  path = ~/dotfiles/.config/git/catppuccin.gitconfig

[core]
  editor = nvim
  pager = delta

[interactive]
  diffFilter = delta --color-only

[init]
  defaultBranch = main

[pull]
  rebase = true

[push]
  autoSetupRemote = true

[merge]
  confictstyle = diff3

[diff]
  colorMoved = default

[delta]
  navigate = true
  side-by-side = true
  line-numbers = true
  true-color = always
  features = catppuccin-mocha decorations

[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  hunk-header-decoration-style = cyan box ul
